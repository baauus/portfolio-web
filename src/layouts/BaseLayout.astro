---
import { ViewTransitions } from 'astro:transitions'
import HeadSEO from '../components/HeadSEO.astro'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'

interface Props {
  title?: string
  description?: string
  ogImage?: URL
  canonicalURL?: URL
  noindex?: boolean
}

const { title, description, ogImage, canonicalURL, noindex } = Astro.props
---

<html lang="en">
  <head>
    <HeadSEO title={title} description={description} ogImage={ogImage} canonicalURL={canonicalURL} noindex={noindex} />
    <ViewTransitions />
  </head>
  <body class="min-h-screen bg-background font-sans antialiased min-w-sm">
    <div class="flex flex-col items-center justify-center">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>
