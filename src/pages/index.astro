---
import BaseLayout from '../layouts/BaseLayout.astro'
import AboutMeCard from '../components/sections/AboutMeCard.astro'
import TechnologiesCard from '../components/sections/TechnologiesCard.astro'
import Card from '../components/Card.astro'
import TimeZoneCard from '../components/sections/TimeZoneCard.astro'
import ExperienceCard from '../components/sections/ExperienceCard.astro'
import ProjectsCard from '../components/sections/ProjectsCard.astro'
import CertificatesCard from '../components/sections/CertificatesCard.astro'
import EducationCard from '../components/sections/EducationCard.astro'
import { PROFILE } from "../content/profileData";
const SITE = PROFILE.site
---


<BaseLayout
  title={SITE.SEO.title}
  description={SITE.SEO.description}

>
  <div
    slot="loader"
    class="fixed top-0 right-0 bottom-0 left-0 z-50 flex h-screen w-screen items-center justify-center text-3xl font-black uppercase text-neutral-50 loader bg-darkslate-700"
  >
  </div>
  <main
    transition:animate="fade"
    class="relative m-auto grid w-full max-w-6xl gap-2 overflow-hidden p-2 sm:gap-2 sm:p-4 md:grid-cols-2 md:gap-3 md:p-6 lg:grid-cols-12 lg:gap-4"
  >
    <Card colSpan="lg:col-span-9 md:col-span-2" rowSpan="md:row-span-1 lg:row-span-4">
      <AboutMeCard/>
    </Card>
    <Card colSpan="lg:col-span-3 md:col-span-1" rowSpan="md:row-span-1 lg:row-span-2" title="Your time">
      <TimeZoneCard/>
    </Card>
    <Card colSpan="lg:col-span-3 md:col-span-1" rowSpan="md:row-span-1 lg:row-span-2" title="My time">
      <TimeZoneCard timezone={PROFILE.timezone} />
    </Card>
    <Card colSpan="lg:col-span-4 md:col-span-1" rowSpan="md:row-span-1 lg:row-span-1" title="Technologies">
      <TechnologiesCard/>
    </Card>
    <Card colSpan="md:col-span-1 lg:col-span-4" rowSpan="md:row-span-2 lg:row-span-2" title="Education">
      <EducationCard/>
    </Card>
    <Card colSpan="md:col-span-1 lg:col-span-4" rowSpan="md:row-span-2 lg:row-span-2" title="Experience">
      <ExperienceCard/>
    </Card>
    <Card colSpan="md:col-span-1 lg:col-span-4" rowSpan="md:row-span-1 lg:row-span-1"
          title="Certificates">
      <CertificatesCard/>
    </Card>
    <Card colSpan="md:col-span-3 lg:col-span-6 " rowSpan="md:row-span-3 lg:row-span-2" title="Projects">
      <ProjectsCard/>
    </Card>
    <Card colSpan="md:col-span-3 lg:col-span-6" rowSpan="md:row-span-2 lg:row-span-2" title="Contact">
      <div class="flex h-full w-full items-center justify-center text-center text-sm">
        <i>
          // TODO: Add contact sections 
        </i>
      </div>
    </Card>


  </main>
</BaseLayout>

