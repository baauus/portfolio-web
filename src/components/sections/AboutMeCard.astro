---
import {PROFILE} from "../../content/profileData";
---

<div class="relative flex h-full w-full animate-appear flex-col md:flex-row md:gap-6">

  <div class="flex flex-1 flex-col gap-3">
    <!-- Header: title + location, with image on mobile -->
    <div class="flex items-start justify-between md:block">
      <div>
        <p class="m-0 text-xl font-semibold">DevOps Engineer</p>
        <p class="m-0 text-sm text-muted-foreground">Andorra</p>
      </div>
      <!-- Image visible only on mobile -->
      <img
        src={PROFILE.avatarUrl}
        class="block md:hidden pointer-events-none select-none rounded-xl object-cover h-16 w-16 shrink-0"
        alt={`image of ${PROFILE.name}`}
      />
    </div>
    <!-- Description -->
    <ul class="pt-2 list-none space-y-2">
      {PROFILE.shortIntros.map((intro) => (
        <li>{intro}</li>
      ))}
    </ul>
  </div>

  <!-- Image visible only on desktop -->
  <img
    src={PROFILE.avatarUrl}
    class="hidden md:block pointer-events-none select-none rounded-xl object-cover h-32 w-32 shrink-0 self-start"
    alt={`image of ${PROFILE.name}`}
  />
</div>

